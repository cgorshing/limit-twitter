{
  "manifest_version": 2,
  "name": "limit-twitter",
  "version": "0.1.2",

  "description": "Redirect to app.pocket.com (for now)",
  "homepage_url": "https://github.com/cgorshing/limit-twitter",
  "icons": {
    "48": "icons/link-48.png"
  },

  "permissions": [
    "storage"
  ],

  "content_scripts": [
    {
      "matches": ["*://*.twitter.com/*"],
      "js": ["limit-twitter.js"]
    }
  ],
  "default_locale": "en"
}
